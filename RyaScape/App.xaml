<Application x:Class="RyaScape.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Load base -->
                <ResourceDictionary Source="pack://application:,,,/FluentDesign;component/Themes/Generic.xaml" />
                <!-- Load theme resources (Dark/Light) -->
                <ResourceDictionary Source="pack://application:,,,/FluentDesign;component/Styles/Themes/Dark.xaml" />
                <!-- Load Controls -->
                <ResourceDictionary Source="pack://application:,,,/FluentDesign;component/Themes/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>